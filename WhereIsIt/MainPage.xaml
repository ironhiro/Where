    <ContentPage.BindingContext>
        <viewModel:TestViewModel />
    </ContentPage.BindingContext>
    <Grid ColumnDefinitions=".1*,.1*,.1*" RowDefinitions=".9*,.1*">

        <maps:Map x:Name="map" Grid.ColumnSpan="3" />
