<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WhereIsIt.MVVM.View.ToiletView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModel="clr-namespace:WhereIsIt.MVVM.ViewModel"
    Title="화장실">
    <ContentPage.BindingContext>
        <viewModel:ToiletViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding OnLoadedCommand}" EventName="Loaded" />
    </ContentPage.Behaviors>
    <Grid ColumnDefinitions=".1*,.1*,.1*">
        <maps:Map x:Name="map" Grid.ColumnSpan="3" />
    </Grid>
</ContentPage>
