<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WhereIsIt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WhereIsIt"
    xmlns:view="clr-namespace:WhereIsIt.MVVM.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                Title="Home"
        ContentTemplate="{DataTemplate view:MainView}"
         />

        </Tab>
        <Tab Title="Toilet">
            <ShellContent
                Title="Toilet"
                
        ContentTemplate="{DataTemplate view:ToiletView}"
         />

        </Tab>
        <Tab Title="Setting">
            <ShellContent
                Title="Setting"
        ContentTemplate="{DataTemplate view:PreferenceView}"
         />

        </Tab>

    </TabBar>
    

</Shell>

